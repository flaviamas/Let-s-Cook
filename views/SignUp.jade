      function validaForm() {
      if (document.registr.surname.value=="") {
      alert("Enter surname");
      return false;
      }
      if (document.registr.name.value=="") {
      alert("Enter name");
      return false;
      }
      if (document.registr.email.value=="") {
      alert("Enter email");
      return false;
      }
      if(document.registr.nickname.value==""){
      alert("Enter nickname");
      return false;
      }
      if(document.registr.password.value==""){
      alert("Enter password");
      return false;
      }
      alert("Datas entered correctly");
      return true;
      }
