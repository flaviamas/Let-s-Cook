                    span.input-group-addon
                      i.glyphicon.glyphicon-lock
                    input#cpassword.form-control(required, type='password', name='cpassword', placeholder='Confirm your password', value='', onChange="return controlloPassword()")
              
              .form-group
                label.control-label.col-sm-3
                  | First Name 
                  span.text-danger *
                .col-md-6.col-sm-7
                  input#mem_name.form-control(required, type='text', name='nome', placeholder='Enter your First Name', value='', onChange="return controlloNome()")
              .form-group
                label.control-label.col-sm-3
                  | Last Name 
                  span.text-danger *
                .col-md-6.col-sm-7
                  input#mem_name.form-control(required, type='text', name='cognome', placeholder='Enter your Last Name', value='', onChange="return controlloCognome()")
              
              .form-group.label_001
                .col-md-6.col-sm-7
                  label Gender:
                  br
                  label.radio-inline 
                    input(type='radio', name='optradio') 
                    | Male 
                  
                  label.radio-inline
                    input(type='radio', name='optradio')
                    | Female 
                  

