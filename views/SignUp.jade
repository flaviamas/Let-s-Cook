                  .input-group
                    span.input-group-addon
                      i.glyphicon.glyphicon-lock
                    input#password.form-control(required, type='password', name='password', placeholder='Choose password', value='')
              .form-group
                label.control-label.col-sm-3
                  | Confirm Password 
                  span.text-danger *
                .col-md-6.col-sm-8
