  body
     nav.navbar.navbar-expand-lg.navbar-light.bg-light
       a.navbar-brand Let's Cook
       button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        div(class="collapse navbar-collapse" id="navbar NavDropdown")
            ul.navbar-nav
              li.nav-item.active
                a.nav-link(href='index') Home

    form.form-horizontal
      fieldset
        .form-group
          
          label.col-sm-2.col-lg-2.control-label(for='nome') Nome
          .col-sm-5.col-lg-5
            input#nome.form-control(type='text', placeholder='Inserisci il nome...')
        .form-group
          label.col-sm-2.col-lg-2.control-label(for='cognome') Cognome
          .col-sm-5.col-lg-5
            input#cognome.form-control(type='text', placeholder='Inserisci il cognome...')
        .form-group
          label.col-sm-2.col-lg-2.control-label(for='email') Email
          .col-sm-5.col-lg-5
            input#email.form-control(type='text', placeholder="Inserisci l'indirizzo email...")
        .form-group
          label.col-sm-2.col-lg-2.control-label(for='password') Password
          .col-sm-5.col-lg-5
            input#email.form-control(type='password', placeholder="Inserisci password...")
        .form-group
          .col-sm-5.col-lg-5.col-sm-offset-2
            .checkbox
              label
                input(type='checkbox')
                |  Ricorda i miei dati
        .form-group
          .col-sm-5.col-lg-5.col-sm-offset-2
            button.btn.btn-default(type='submit') Invia
    
    
