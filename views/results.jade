    title Results
  body
    nav.navbar.navbar-expand-lg.navbar-light.navbar-default
      a.navbar-brand Let's Cook
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
      div(class="collapse navbar-collapse" id="navbar NavDropdown")
          ul.navbar-nav
            li.nav-item.active
              a.nav-link(href='/') Home
    h1 Select Your Favourite Recipe!
    - var x = jsonfile["to"];
    - console.log(x);
    -for(i = 0; i+3 < x; i+=3)
      - var fileJson1 = jsonfile["hits"][i]["recipe"]["label"];
      - var img1 = jsonfile["hits"][i]["recipe"]["image"];
      - var link1 = jsonfile["hits"][i]["recipe"]["url"];
      - var fileJson2 = jsonfile["hits"][i+1]["recipe"]["label"];
      - var img2 = jsonfile["hits"][i+1]["recipe"]["image"];
      - var link2 = jsonfile["hits"][i+1]["recipe"]["url"];
      - var fileJson3 = jsonfile["hits"][i+2]["recipe"]["label"];
      - var img3 = jsonfile["hits"][i+2]["recipe"]["image"];
      - var link3 = jsonfile["hits"][i+2]["recipe"]["url"];
      .container
        .row
          .col-sm
            div(class="res")
              img(src = img1,class="img")
              a(href=link1,class='ricetta') #{fileJson1}
          .col-sm
            div(class="res")
              img(src = img2,class="img")
              a(href=link2,class='ricetta') #{fileJson2}
          .col-sm
            div(class="res")
              img(src = img3,class="img")
              a(href=link3,class='ricetta') #{fileJson3}
            

